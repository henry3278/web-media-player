{
  "name": "ai-tavern-image-grabber",
  "version": "2.0.0",
  "description": "AI云酒馆图片抓取插件 - 无依赖版",
  "type": "extension",
  "author": "AI云酒馆",
  "entry": "./grabber.js",
  "adminEntry": "./admin-component.vue",
  "config": "./config.json",
  "dependencies": [],
  "permissions": ["network", "filesystem"],
  "settings": {
    "enabled": {
      "type": "boolean",
      "default": true,
      "label": "启用插件"
    },
    "targetWebsite": {
      "type": "string",
      "default": "https://www.kchai.org/",
      "label": "目标网站"
    },
    "maxImageWidth": {
      "type": "string", 
      "default": "400px",
      "label": "最大图片宽度"
    }
  }
}
